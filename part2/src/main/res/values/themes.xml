<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.a2p2" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.a2p2" parent="Base.Theme.a2p2" />
    <style name="Base.Theme.a2p2.IntentButton" parent="@android:style/Widget.TextView">
        <item name="android:padding">12dp</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="Base.Theme.a2p2.CameraIntent" parent="Base.Theme.a2p2.IntentButton">
        <item name="android:background">@color/openCameraIntentBG</item>
        <item name="android:textColor">@color/textDark</item>
    </style>
    <style name="Base.Theme.a2p2.PictureIntent" parent="Base.Theme.a2p2.IntentButton">
        <item name="android:background">@color/viewPictureIntentBG</item>
        <item name="android:textColor">@color/textDark</item>
    </style>
    <style name="Base.Theme.a2p2.ActivityIntent" parent="Base.Theme.a2p2.IntentButton">
        <item name="android:background">@color/callActivityIntentBG</item>
        <item name="android:textColor">@color/textLight</item>
    </style>
    <style name="Base.Theme.a2p2.BlankIntent" parent="Base.Theme.a2p2.IntentButton">
        <item name="android:background">@color/blankIntentBG</item>
        <item name="android:textColor">@color/textLight</item>
    </style>
    <style name="Base.Theme.a2p2.SendButton" parent="Base.Theme.a2p2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/buttonBG</item>
        <item name="android:textColor">@color/textDark</item>
    </style>
</resources>